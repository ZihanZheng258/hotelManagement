<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <servlet-class>Servlet.ForgotPasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <url-pattern>/jsp/ForgotPassword</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HotelServlet</servlet-name>
    <servlet-class>Servlet.HotelServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HotelServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>Servlet.SignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>/jsp/Signup</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SigninServlet</servlet-name>
    <servlet-class>Servlet.SigninServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SigninServlet</servlet-name>
    <url-pattern>/jsp/Signin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddHotelRecordServlet</servlet-name>
    <servlet-class>Servlet.AddHotelRecordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddHotelRecordServlet</servlet-name>
    <url-pattern>/jsp/AddHotelRecord</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ShowHotelRecordServlet</servlet-name>
    <servlet-class>Servlet.ShowHotelRecordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowHotelRecordServlet</servlet-name>
    <url-pattern>/ShowHotelRecord</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteHotelRecordServlet</servlet-name>
    <servlet-class>Servlet.DeleteHotelRecordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteHotelRecordServlet</servlet-name>
    <url-pattern>/DeleteHotelRecord</url-pattern>
  </servlet-mapping>


</web-app>
